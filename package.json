{
  "name": "knoknok-chaindata-server",
  "version": "1.0.0",
  "description": "a chaindata interactive system.",
  "main": "dist/server.js",
  "private": "true",
  "scripts": {
    "watch-server": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "build": "npm run lint && npm run build-ts && npm run copy-static-assets",
    "start": "npm run serve"
  },
  "engines": {
    "node": ">=14.x.x",
    "npm": ">=6.x.x"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "aptos": "^1.4.0",
    "bignumber.js": "^9.1.1",
    "bip39": "^3.0.4",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "ethereumjs-util": "^7.1.5",
    "ethereumjs-wallet": "^1.0.2",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-swagger-decorator": "^1.8.6",
    "reflect-metadata": "^0.1.13",
    "web3": "^1.8.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^16.15.0",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.31.0",
    "nodemon": "^2.0.20",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}